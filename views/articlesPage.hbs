<main class="main-container container">
    <h1 class="row mt-3 mb-3 ms-2">Новости</h1>
    <div class="main-box row">
        {{#if articles}}
        <ul>
            {{#each articles}}
            <a href="/news/{{_id}}" class="link text-dark row">
                <li class="card mt-3 mb-3 p-0 pt-3 pb-3">
                    <div class="card-body row p-0 m-0">

                        <div class="row col-2 m-0 p-0">
                            {{!-- <img src="{{articleImg}}" alt="{{articleImgAlt}}"> --}}
                            <p>text</p>
                        </div>
                        <div class="row col-10">
                            <h5>
                                {{articleTitle}}
                            </h5>
                            <p>{{shortArticleBody}}</p>
                        </div>

                    </div>
                </li>
            </a>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</main>

