<main class="main-container container">
    <h1 class="row mt-3 mb-3 ms-3 me-0">Новости</h1>
    <div class="main-box row">
        {{#if articles}}
        <ul class="row p-3 me-0">
            {{#each articles}}
            <a href="/news/{{_id}}" class="link text-dark row mt-3 mb-3 me-0">
                <li class="card p-3 ">
                    <div class="card-body row p-0 m-0">

                        <div class="row col-12 col-sm-2 m-0 p-0">
                            {{!-- <img src="{{articleImg}}" alt="{{articleImgAlt}}"> --}}
                            <p>text</p>
                        </div>
                        <div class="row col-12 col-sm-10 m-0 p-0">
                            <h5>
                                {{articleTitle}}
                            </h5>
                            <p class="col text-truncate">{{articleBody}}</p>
                        </div>

                    </div>
                </li>
            </a>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</main>

{{>footer}}