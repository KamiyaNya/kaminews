<div class="container-fluid login-page mt-3 mb-3">
    <div class="row justify-content-center login-page-box">
        <form class="col-md-6 container" method="{{method}}" action="{{actionUrl}}">
            <div class="mb-3">
                <label for="validationDefault01" class="form-label">Имя пользователя</label>
                <input type="text" class="form-control" id="validationDefault01" name="username" required>
            </div>
            <div class="mb-3">
                <label for="validationDefault02" class="form-label">Пароль</label>
                <input type="password" class="form-control" id="validationDefault02" name="password" required>
            </div>
            <div class="col-12">
                <button class="btn btn-dark access" type="submit">Войти</button>
            </div>
        </form>
    </div>
</div>